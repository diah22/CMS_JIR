
@{
    ViewData["Title"] = "Ajouter Act";
}

<div class="container">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" id="ajout"><h3 class="panel-title">Ajouter une nouvelle activité</h3></div>
            <div class="panel-body">
                <div class=" form">
                    <form class="cmxform form-horizontal tasi-form" action="~/Activite/AjoutAct" method="post">
                        <div class="form-group ">
                            <label class="control-label col-lg-2">Code activité</label>
                            <div class="col-lg-9">
                                <input class=" form-control" id="code" name="code" type="text" required="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-lg-2">Libellé</label>
                            <div class="col-lg-9">
                                <input class=" form-control" id="libelle" name="libelle" type="text" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" value="Enregistrer" class="btn btn-success ">
                                <a href="~/Activite/Index"><input type="button" value="Annuler" class="btn btn-default waves-effect waves-lignt"></a>
                            </div>
                        </div>
                    </form>
                </div> <!-- form -->
            </div> <!-- panel-body -->
        </div> <!-- panel -->
    </div> <!-- col -->
</div><!-- container ajout-->
