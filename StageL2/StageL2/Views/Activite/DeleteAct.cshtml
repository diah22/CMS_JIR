@using StageL2.Views.Activite
@using Oracle.ManagedDataAccess.Client
@using System.Data
@{
    ViewData["Title"] = "Supprimer Activite";
    var code = ViewBag.Message;
    FonctionAct sa = new FonctionAct();
    OracleDataReader sql = sa.AfficherAct(code);
    sql.Read();
}

<div class="container">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" id="modifier"><h3 class="panel-title">Supprimer une activité</h3></div>
            <div class="panel-body">
                <div class=" form">
                    <form class="cmxform form-horizontal tasi-form" method="post" action="~/Activite/SupprimerAct">
                        <div class="alert alert-info alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            Voulez-vous supprimer définitivement cette activité?
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-lg-2">Code</label>
                            <div class="col-lg-9">
                                <input class=" form-control" id="code" name="code" type="text" value="@sql.GetString(0)" readonly>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-lg-2">Libellé</label>
                            <div class="col-lg-9">
                                <input class=" form-control" id="libelle" name="libelle" type="text" value="@sql.GetString(1)" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" value="Supprimer" class="btn btn-success ">
                                <a href="~/Activite/Index"><input type="button" value="Annuler" class="btn btn-default waves-effect waves-lignt"></a>
                            </div>
                        </div>
                    </form>
                </div> <!-- .form -->
            </div> <!-- panel-body -->
        </div> <!-- panel -->
    </div> <!-- col -->
</div><!-- content -->