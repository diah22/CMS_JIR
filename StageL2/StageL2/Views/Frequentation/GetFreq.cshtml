@using StageL2.Views.Frequentation
@using Oracle.ManagedDataAccess.Client
@{
    ViewData["Title"] = "GetFreq";
    var id = ViewBag.Message;

    FonctionFreq ag = new FonctionFreq();
    OracleDataReader dr = ag.GetFreq1(id);
    dr.Read();

    FonctionFreq act = new FonctionFreq();
    OracleDataReader drAct = act.ListeAct();
}


    <div class="container">
        <div class="col-sm-12">
            <div class="panel panel-success">
                <div class="panel-heading" id="ajout"><h3 class="panel-title">Formulaire de modification</h3></div>
                <div class="panel-body">
                    <div class=" form">
                        <form class="cmxform form-horizontal tasi-form" action="~/Frequentation/UpdateFrequentation" method="post">
                            <div class="form-group ">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>ID :</label>
                                        <input class=" form-control" name="id" type="text" required="" value="@dr.GetOracleValue(0)" readonly>
                                    </div>

                                    <div class="col-md-3">
                                        <label>Medecin :</label>
                                        <input class=" form-control" name="med" type="text" required="" value="@dr.GetOracleValue(1)" onchange="CompteNumero(this.value)">
                                    </div>

                                    <div class="col-md-3">
                                        <label>N° d'entrée :</label>
                                        <div id="afficherNumero">
                                            <input type="number" class="form-control text-center" readonly value="@dr.GetOracleValue(5)" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group ">
                                <div class="col-md-3">
                                    <label>Nom :</label>
                                    <input class=" form-control" id="nom" name="nom" type="text" required="" value="@dr.GetOracleValue(2)">
                                </div>

                                <div class="col-md-3">
                                    <label>Age :</label>
                                    <input class="form-control " name="age" type="text" required="" value="@dr.GetOracleValue(3)">
                                </div>

                                <div class="col-md-3">
                                    <label>Sexe :</label>
                                    <select class="form-control" name="sexe">
                                        <option value="@dr.GetOracleValue(4)"></option>
                                        <option value="M">Homme</option>
                                        <option value="F">Femme</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group ">
                                <div class="col-md-3">
                                    <label for="nom" class="control-label col-lg-2">Prestation </label>
                                    <input class="form-control " name="prest" type="text" required="" value="@dr.GetOracleValue(6)">
                                </div>
                                <div class="col-md-3">
                                    <label for="nom" class="control-label col-lg-2">Adresse </label>
                                    <input class="form-control " name="adr" type="text" required="" value="@dr.GetOracleValue(7)">
                                </div>

                            </div>

                            <div class="row">
                                <!-- boutons -->
                                <div class="col-lg-12">
                                    <div class="btn-toolbar" role="toolbar">
                                        <div class="pull-right">
                                            <input type="submit" value="Modifier" class="btn btn-warning ">
                                            <a href="~/Frequentation/Index"><input type="button" value="Annuler" class="btn btn-default waves-effect waves-lignt"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div> <!-- form -->
                </div>
            </div>
        </div>
    </div>

