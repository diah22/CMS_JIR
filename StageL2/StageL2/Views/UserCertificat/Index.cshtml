@using Oracle.ManagedDataAccess.Client;
@using StageL2.Views.Certificat;
@{
    ViewData["Title"] = "Index";
}
@{
    Fonctioncert sa = new Fonctioncert();
    OracleDataReader dr = sa.AfficheCert();
}

<body class="fixed-left">
    <!-- Begin page -->
    <div id="wrapper">

        <!---------------------------------------------------------------------------------- TOP MENU ----------------------------------------------------------------------------------->
        <div class="topbar">
            <!-- LOGO -->
            <div class="topbar-left">
                <div class="text-center">
                    <a href="#" class="logo"><i class="md md-terrain"></i> <span>CMS JIRAMA </span></a>
                </div>
            </div>
            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="">
                        <div class="pull-left">
                            <button class="button-menu-mobile open-left">
                                <i class="fa fa-bars"></i>
                            </button>
                            <span class="clearfix"></span>
                        </div>

                        <ul class="nav navbar-nav navbar-right pull-right">
                            <!--Full screen or not-->
                            <li class="hidden-xs">
                                <a href="#" id="btn-fullscreen" class="waves-effect waves-light"><i class="md md-crop-free"></i></a>
                            </li>
                            <li><a href="~/Home/Index"><i class="md md-settings-power"></i></a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <!--------------------------------------------------------------------------------- FIN TOP MENU------------------------------------------------------------------------------------------------------->
        <!---------------------------------------------------------------------------------- MENU GAUCHE --------------------------------------------------------------------------------------------->

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div class="user-details">
                    <div class="pull-left">
                        <a href="www.Jirama.mg" target="_blank" title="Consulter la page web de Jirama"><img src="~/bootstrap/images/logoJirama.jpg" class="thumb-md img-circle"></a>
                    </div>
                </div>
                <!--- Divider -->
                <div id="sidebar-menu">
                    <ul>
                        @*<li>
                            <a href="~/Utilisateur/Index" class="waves-effect"><i class="ion ion-android-friends"></i><span> Utilisateur </span></a>
                        </li>
                        <li>
                            <a href="~/Societe/Index" class="waves-effect"><i class="md md-contacts"></i><span> Société </span></a>
                        </li>
                        <li>
                            <a href="~/Prestation/Index" class="waves-effect"><i class="md md-event-note"></i><span> Prestation </span></a>
                        </li>
                        <li>
                            <a href="~/Activite/Index" class="waves-effect"><i class="md md-add-box"></i><span> Activité </span></a>
                        </li>*@
                        <li>
                            <a href="~/UserCertificat/Index" class="waves-effect"><i class="md md-assignment"></i><span> Certificat </span></a>
                        </li>
                        <li>
                            <a href="~/UserFrequentation/Index" class="waves-effect"><i class="md md-add-to-photos"></i><span> Fréquentation </span></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!------------------------------------------------------------------------------- FIN MENU GAUCHE --------------------------------------------------------------------------------->
        <!----------------------------------------------------------------------------------- CONTENU --------------------------------------------------------------------------------------->

        <div class="content-page">
            <div class="content">
                <div class="container">

                    <!-- Page-Title -->
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="pull-left page-title">Certificat</h4>
                            <ol class="breadcrumb pull-right">
                                <li>@System.DateTime.Today.ToLongDateString()</li>
                                <li>@System.DateTime.Now.ToShortTimeString()</li>
                            </ol>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">

                                <div class="panel-body">
                                    <div class="row">
                                        <div class="m-b-30">
                                            <button class="btn btn-success waves-effect waves-lignt" onclick="Ajoutcert()"> Nouveau <i class="fa fa-plus"></i></button>
                                            <button class="btn btn-success waves-effect waves-lignt" onclick="ModifierCert()"> Mise à jour  <i class="fa fa-spin fa-refresh"></i></button>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <table id="datatable" class="table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Nouveau matricule</th>
                                                            <th>Ancien matricule</th>
                                                            <th>Type patient</th>
                                                            <th>Nom</th>
                                                            <th>Scolarité </th>
                                                            <th>Célibat</th>
                                                            <th>Date saisie</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @while (dr.Read())
                                                        {
                                                            <tr class="gradeU">
                                                                <td>@dr.GetOracleValue(0)</td>
                                                                <td>@dr.GetOracleValue(1)</td>
                                                                <td>@dr.GetOracleValue(2)</td>
                                                                <td>@dr.GetOracleValue(3)</td>
                                                                <td>@dr.GetOracleValue(4)</td>
                                                                <td>@dr.GetOracleValue(5)</td>
                                                                <td>@dr.GetOracleValue(6)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div> <!-- end row table-->
                                    </div> <!-- end row-->
                                </div> <!-- end panel body-->
                            </div> <!-- end panel panel-default-->
                        </div> <!-- end col-->
                    </div> <!-- End Row -->
                </div> <!-- end container -->
                <div id="zonetext"></div> <!-- affiche certificat -->
            </div> <!-- content -->

            <footer class="footer text-right">
                2019 © CMS Jirama.
            </footer>

        </div> <!-- end content page -->
    </div> <!-- END wrapper -->
    <!--------------------------------------------------------------------------------------- FIN CONTENU ---------------------------------------------------------------------------------->
    <!--------------------------------------------------------------------------------------- SCRIPT JS ----------------------------------------------------------------------------------->
    <script>
        var resizefunc = [];
    </script>

</body>

@if (TempData["text"] != null)
{
    <script>
        alert('@TempData["text"]');
    </script>
}

